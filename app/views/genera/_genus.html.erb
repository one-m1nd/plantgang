<div id="<%= dom_id genus %>">
  <% if action_name != "show" %>
    <%= link_to "Show this genus", genus, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this genus', edit_genus_path(genus), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>

<table class="table-auto border-spacing-4 border-separate border border-slate-900">
  <thead>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  </thead>
  <tbody>

  <tr>
    <td class="border border-slate-900">ID</td>
    <td class="border border-slate-900"><%= @genus.id %></td>
  </tr>

  <tr>
    <td class="border border-slate-900">Name</td>
    <td class="border border-slate-900"><%= @genus.name %></td>
  </tr>

  <tr>
    <td class="border border-slate-900">Families</td>
    <td class="border border-slate-900"><%= @genus.families.map(&:name).uniq.to_sentence %></td>
  </tr>

  <tr>
    <td class="border border-slate-900">Plants</td>
    <td class="border border-slate-900"><%= @genus.plants.map(&:name).to_sentence %></td>
  </tr>
  </tbody>
</table>