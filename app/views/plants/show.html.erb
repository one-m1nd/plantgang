<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @plant %>

    <%= link_to 'Edit this plant', edit_plant_path(@plant), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this plant', plant_path(@plant), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to plants', plants_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if @plant.trefle_data.present? %>
      <table class="table-auto border-spacing-4 border-separate border border-slate-900">
        <thead>
        <tr>
          <th>Attribute</th>
          <th>Value</th>
        </tr>
        </thead>
        <tbody>

        <tr>
          <td class="border border-slate-900">Synonyms</td>
          <td class="border border-slate-900"><%= @plant.trefle_data['synonyms'].to_sentence %></td>
        </tr>

        <tr>
          <td class="border border-slate-900">Images</td>
          <td class="border border-slate-900"><%= @plant.trefle_data.fetch('image_url', '') %></td>
        </tr>

        <tr>
          <td class="border border-slate-900">Common name</td>
          <td class="border border-slate-900"><%= @plant.trefle_data.fetch('common_name', '') %></td>
        </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>