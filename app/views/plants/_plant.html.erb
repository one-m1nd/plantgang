<div id="<%= dom_id plant %>">
  <% if action_name != "show" %>
    <%= link_to "Show this plant", plant, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this plant', edit_plant_path(plant), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>

  <table class="table-auto border-spacing-4 border-separate border border-slate-900">
    <thead>
    <tr>
      <th>Attribute</th>
      <th>Value</th>
    </tr>
    </thead>
    <tbody>

    <tr>
      <td class="border border-slate-900">ID</td>
      <td class="border border-slate-900"><%= @plant.id %></td>
    </tr>

    <tr>
      <td class="border border-slate-900">Name</td>
      <td class="border border-slate-900"><%= @plant.name %></td>
    </tr>

    <tr>
      <td class="border border-slate-900">Family</td>
      <td class="border border-slate-900"><%= @plant.family.name %></td>
    </tr>

    <tr>
      <td class="border border-slate-900">Genus</td>
      <td class="border border-slate-900"><%= @plant.genus.name %></td>
    </tr>

    <tr>
      <td class="border border-slate-900">Status</td>
      <td class="border border-slate-900"><%= @plant.status.name %></td>
    </tr>
    </tbody>
  </table>
</div>
