<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  Next time to water: <%= Watertracker.next_date %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Trackers</h1>
    <%= link_to 'New tracker', new_watertracker_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <table class="table-auto border-spacing-4 border-separate border border-slate-900">
    <thead>
    <tr>
      <th>Date</th>
      <th>Tracker</th>
    </tr>
    </thead>
    <tbody>
    <% @trackers.each do |tracker| %>
      <tr>
        <td class="border border-slate-900"><%= tracker.date %></td>
        <td class="border border-slate-900">
          <a href="<%= watertracker_url(tracker) %>">Show</a>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
